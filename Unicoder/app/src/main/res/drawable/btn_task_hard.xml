<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_focused="false"
        android:state_pressed="true"
        android:drawable="@drawable/bg_task_btn_pressed">
    </item>

    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="-90"
                android:startColor="#0038FF"
                android:endColor="#9E00FF"/>
